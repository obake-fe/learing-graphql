{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "lib": ["esnext"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": true
  }
}
